#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/spectral/dist/cli/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/spectral/dist/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/spectral/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/spectral/dist/cli/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/spectral/dist/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/spectral/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules/@stoplight/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/@stoplight+spectral@5.9.2/node_modules:/Users/mark.murphy/Repos/spectral-comment-action/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../dist/cli/index.js" "$@"
else
  exec node  "$basedir/../../dist/cli/index.js" "$@"
fi
